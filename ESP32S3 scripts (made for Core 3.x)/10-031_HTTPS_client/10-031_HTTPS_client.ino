// ====== Function Prototypes ======
void connectToWiFi();
void performHttpsRequest();

// ====== Setup ======
void setup() {
    Serial.begin(115200);
    delay(100);

    connectToWiFi();
}

// ====== Loop ======
void loop() {
    performHttpsRequest();
    delay(10000);  // 10-second interval between requests
}

// ====== Helper Functions ======

// Connect to Wi-Fi and wait for success
void connectToWiFi() {
    Serial.print("Connecting to Wi-Fi SSID: ");
    Serial.println(WIFI_SSID);
    WiFi.begin(WIFI_SSID, WIFI_PASSWORD);

    int attempt = 0;
    while (WiFi.status() != WL_CONNECTED) {
        delay(1000);
        Serial.print(".");
        if (++attempt > 20) {
            Serial.println("\nWi-Fi connection failed. Restarting...");
            ESP.restart();
        }
    }

    Serial.println("\nWi-Fi connected!");
    Serial.print("IP address: ");
    Serial.println(WiFi.localIP());
}

// Perform HTTPS GET request using WiFiClientSecure
void performHttpsRequest() {
    WiFiClientSecure client;

    // Set trusted root certificate
    client.setCACert(ROOT_CA);

    Serial.println("\nConnecting to server via HTTPS...");
    if (!client.connect(SERVER, HTTPS_PORT)) {
        Serial.println("‚ùå Connection to server failed!");
        return;
    }

    // Form HTTP GET request
    client.println(String("GET ") + URL + " HTTP/1.1");
    client.println(String("Host: ") + SERVER);
    client.println("User-Agent: ESP32");
    client.println("Connection: close");
    client.println();

    // Wait for response headers
    while (client.connected()) {
        String line = client.readStringUntil('\n');
        if (line == "\r") break;
    }

    // Read and display body
    Serial.println("üì• Response body:");
    while (client.available()) {
        char c = client.read();
        Serial.write(c);
    }

    client.stop();
    Serial.println("\nConnection closed.");
}
